<div class = 'row mb-2 mt-2' id="eventCards">

{{#each events as |event|}}

<div class="card event-card" style="width: 18rem;">
  <img src='./images/photo1.avif' class="card-img-top" alt="stock photo" style="width:17.9rem; height:18rem;">
  <div class="card-body">
    <h5 class="card-title">{{ event.name }}</h5>
    <p class="card-text">{{ event.description }}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{ event.location }}</li>
    <li class="list-group-item">{{format_date event.event_date}}</li>
    <li class="list-group-item">{{ event.event_time}}</li>
    <li class="list-group-item">{{event.expected_attendance}}</li>
  </ul>
  <div class="card-body">
    <a href="mailto:{{user.email}}">Email the host here</a>
  </div> 
    <h3><em>Event hosted by {{user.username}}</em></h3>
</div> 
{{/each}}

</div>
