{{#each events as |event|}}
<div class="card" style="width: 18rem;">
    {{!-- have random img function from utils generated below --}}
  <img src={{get_cardImage}} class="card-img-top" alt="stock photo" style="width:17rem; height:9rem;">
  <div class="card-body">
    <h5 class="card-title">{{ event.name }}</h5>
    <p class="card-text">{{ event.description }}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">event location</li>
    <li class="list-group-item">event time (formatted)</li>
    <li class="list-group-item">expected attendance</li>
    <li class="list-group-item">other list item</li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">maybe a google calendar link if we get this far</a>
    <a href="#" class="card-link">mailto href to email User.email with any questions</a>
  </div>
</div>
{{/each}}